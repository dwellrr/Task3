<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bank stuff</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Task3.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #3a4750; /* Replace with your desired background color */
            margin: 0; /* Optional: Removes default body margin */
            padding: 0;
            color: #d3d6db; /* Optional: Removes default body padding */
        }

        .custom-navbar {
            background-color: #2a2438; /* Set the background color to #2a2438 */
            color: #d3d6db;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar navbar-dark box-shadow" style="background-color: #303841;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Very reliable bank</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CallList">Call List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AuditView">Audit</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="NewClientView">Register new client</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="scrollie" style="margin-bottom: 20px">
        <main role="main">
            @RenderBody()
            @await Html.PartialAsync("_QuickActionPartial")
        </main>
    </div>

    <footer id="footer" class="footer mt-auto text-muted fixed-bottom" style="background-color: #303841;">
        <div class="container">
            &copy; 2023 - Task3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
.scrollie
{
    border: thin dotted #C0C0C0;
    overflow-x:hidden;
}

    #footer {
        bottom: 0;
        color: #707070;
        left: 0;
        position: relative;
        width: 100%;
    }
</style>